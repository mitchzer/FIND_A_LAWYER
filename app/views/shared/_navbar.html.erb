<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "lawyer.png", height: 50 %>
  <% end %>



  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
      <% if user_signed_in? %>
      <!-- Links when logged in -->
      <%= form_tag lawyers_path, class: "form-inline", method: :get do %>
      <%= text_field_tag 'term', params[:term], placeholder: "Search Lawyers", class: "form-control" %>

      <%= button_tag(type: "submit", class: "btn btn-default") do %>
          <i class="fas fa-search"></i>
      <% end %>
      <% end %>


